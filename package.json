{
  "name": "canto",
  "version": "0.1.0",
  "description": "Universal, stack-agnostic CLI dev launcher for local development",
  "type": "module",
  "bin": {
    "canto": "./bin/canto.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE",
    "LICENSE-MIT",
    "LICENSE-COMMERCIAL",
    "CONTRIBUTING.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "dev": "tsx --watch src/cli/index.ts",
    "build": "tsc && chmod +x bin/canto.js",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "validate": "npm run type-check && npm run lint && npm run format:check",
    "prepublishOnly": "npm run validate && npm run build",
    "bun:dev": "bun --watch src/cli/index.ts",
    "bun:build": "bun build src/index.ts --outdir dist --target node --sourcemap=external --minify",
    "bun:install": "bun install",
    "bun:test": "bun test",
    "bun:validate": "bun run type-check && bun run lint && bun run format:check"
  },
  "keywords": [
    "cli",
    "dev",
    "launcher",
    "development",
    "docker",
    "monorepo",
    "workspace",
    "devtools",
    "local-development",
    "stack-agnostic"
  ],
  "author": "Thiago Santos <thiago.santos@excelsi.dev> (https://excelsi.dev)",
  "license": "SEE LICENSE IN LICENSE",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Excelsi-Innovations/canto.git"
  },
  "bugs": {
    "url": "https://github.com/Excelsi-Innovations/canto/issues"
  },
  "homepage": "https://github.com/Excelsi-Innovations/canto#readme",
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "ink": "^6.6.0",
    "ink-select-input": "^6.2.0",
    "picocolors": "^1.0.0",
    "react": "^19.2.4",
    "yaml": "^2.3.4",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bun": "latest",
    "@types/node": "^25.2.1",
    "@types/react": "^19.2.13",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "prettier": "^3.2.4",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.54.0"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "pkg": {
    "scripts": [
      "dist/**/*.js"
    ],
    "assets": [
      "dist/**/*.d.ts",
      "dist/**/*.d.ts.map"
    ],
    "targets": [
      "node20-linux-x64",
      "node20-macos-x64",
      "node20-macos-arm64",
      "node20-windows-x64"
    ],
    "outputPath": "binaries"
  }
}
